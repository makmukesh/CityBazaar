<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/snno"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="left|center"
                android:text="1234"
                android:textColor="#000"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/product_name"
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="left|center"
                android:text="BOROPLUS HEALTHY SKIN ANTISEPTIC CREAM  (400 ML)"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/batch_no"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="left|center"
                android:text="0"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dp"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="left|center"
                android:hint="950.00"
                android:textSize="14dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/discount_per"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="left|center"
                android:text="0"
                android:textSize="14dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/rate"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="left|center"
                android:hint="950.00"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/BV"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="left|center"
                android:hint="950.00"
                android:textSize="14dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:gravity="center|left">

                <EditText
                    android:id="@+id/quantity"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_edittext"
                    android:gravity="left|center"
                    android:inputType="number"
                    android:maxLength="4"
                    android:paddingLeft="5dp"
                    android:textSize="14dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/ttl_amt_withouttax"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="left|center"
                android:text="00"
                android:textSize="14dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/discount_amt"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="left|center"
                android:text="00"
                android:textSize="14dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/CGST_Tax_Per"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="left|center"
                android:text="00"
                android:textSize="14dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/CGST_Tax_Amt"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="left|center"
                android:text="00"
                android:textSize="14dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/IGST_Tax_Per"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="left|center"
                android:text="00"
                android:textSize="14dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/IGST_Tax_Amt"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="left|center"
                android:text="00"
                android:textSize="14dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/SGST_Tax_Per"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="left|center"
                android:text="00"
                android:textSize="14dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/SGST_Tax_Amt"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="left|center"
                android:text="00"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/totalamt"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="left|center"
                android:text="00"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total_sbv"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="left|center"
                android:text="00"
                android:textSize="14dp"
                android:textStyle="bold" />

        </LinearLayout>

    </HorizontalScrollView>
</LinearLayout>