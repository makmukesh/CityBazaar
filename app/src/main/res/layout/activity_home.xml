<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6F8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/rl_bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorPrimary">

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:visibility="gone"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/ic_baseline_search_24"
                        android:tint="@color/app_color_white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/img1"
                        android:text="Search"
                        android:visibility="gone"
                        android:textColor="@color/app_color_white"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:src="@drawable/logo_white"
                        android:layout_alignParentLeft="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:layout_centerVertical="true"/>


                    <ImageView
                        android:id="@+id/iv_login_user"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:backgroundTint="@color/app_color_white"
                        android:padding="3dp"
                        android:src="@drawable/ic_home_login"
                        android:tint="@color/app_color_white" />

                </RelativeLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@color/orange">

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="15dp"
                            android:elevation="5dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="5dp">

                            <com.smarteist.autoimageslider.SliderView
                                android:id="@+id/imageSlider"
                                android:layout_width="match_parent"
                                android:layout_height="160dp"
                                android:background="@color/colorPrimary"
                                app:sliderAnimationDuration="600"
                                app:sliderAutoCycleDirection="back_and_forth"
                                app:sliderAutoCycleEnabled="true"
                                app:sliderIndicatorAnimationDuration="600"
                                app:sliderIndicatorGravity="center_horizontal|bottom"
                                app:sliderIndicatorMargin="15dp"
                                app:sliderIndicatorOrientation="horizontal"
                                app:sliderIndicatorPadding="3dp"
                                app:sliderIndicatorRadius="2dp"
                                app:sliderIndicatorSelectedColor="#5A5A5A"
                                app:sliderIndicatorUnselectedColor="#FFF"
                                app:sliderScrollTimeInSec="1"
                                app:sliderStartAutoCycle="true" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Recharge"
                            android:textColor="@color/black" />

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_marginRight="15dp"
                            android:scrollbars="none">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="-5dp"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginBottom="15dp"
                                    android:elevation="5dp"
                                    app:cardCornerRadius="10dp"
                                    app:cardElevation="5dp">

                                    <FrameLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="45dp"
                                            android:layout_height="45dp"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="-5dp"
                                            android:padding="3dp"
                                            android:src="@drawable/ic_home_mobile" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginTop="0dp"
                                            android:layout_marginBottom="5dp"
                                            android:ellipsize="marquee"
                                            android:fontFamily="@font/roboto"
                                            android:gravity="bottom|center"
                                            android:marqueeRepeatLimit="marquee_forever"
                                            android:scrollHorizontally="true"
                                            android:singleLine="true"
                                            android:text="Mobile"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="12sp" />

                                    </FrameLayout>
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginBottom="15dp"
                                    android:elevation="5dp"
                                    app:cardCornerRadius="10dp"
                                    app:cardElevation="5dp">

                                    <FrameLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="45dp"
                                            android:layout_height="45dp"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="-5dp"
                                            android:padding="3dp"
                                            android:src="@drawable/ic_home_dth" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginTop="3dp"
                                            android:layout_marginBottom="3dp"
                                            android:ellipsize="marquee"
                                            android:fontFamily="@font/roboto"
                                            android:gravity="bottom|center"
                                            android:marqueeRepeatLimit="marquee_forever"
                                            android:scrollHorizontally="true"
                                            android:singleLine="true"
                                            android:text="DTH"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="12sp" />

                                    </FrameLayout>

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginBottom="15dp"
                                    android:elevation="5dp"
                                    app:cardCornerRadius="10dp"
                                    app:cardElevation="5dp">

                                    <FrameLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="45dp"
                                            android:layout_height="45dp"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="-5dp"
                                            android:padding="3dp"
                                            android:src="@drawable/ic_home_datacard" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginTop="3dp"
                                            android:layout_marginBottom="3dp"
                                            android:ellipsize="marquee"
                                            android:fontFamily="@font/roboto"
                                            android:gravity="bottom|center"
                                            android:marqueeRepeatLimit="marquee_forever"
                                            android:scrollHorizontally="true"
                                            android:singleLine="true"
                                            android:text="Datacard"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="12sp" />

                                    </FrameLayout>
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginBottom="15dp"
                                    android:elevation="5dp"
                                    app:cardCornerRadius="10dp"
                                    app:cardElevation="5dp">

                                    <FrameLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="45dp"
                                            android:layout_height="45dp"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="-5dp"
                                            android:padding="3dp"
                                            android:src="@drawable/ic_home_broad_band" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginTop="3dp"
                                            android:layout_marginBottom="3dp"
                                            android:ellipsize="marquee"
                                            android:fontFamily="@font/roboto"
                                            android:gravity="bottom|center"
                                            android:marqueeRepeatLimit="marquee_forever"
                                            android:scrollHorizontally="true"
                                            android:singleLine="true"
                                            android:text="Broadband"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="12sp" />

                                    </FrameLayout>

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginBottom="15dp"
                                    android:elevation="5dp"
                                    app:cardCornerRadius="10dp"
                                    app:cardElevation="5dp">

                                    <FrameLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="45dp"
                                            android:layout_height="45dp"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="-5dp"
                                            android:padding="3dp"
                                            android:src="@drawable/ic_home_electricity" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginTop="3dp"
                                            android:layout_marginBottom="3dp"
                                            android:ellipsize="marquee"
                                            android:fontFamily="@font/roboto"
                                            android:gravity="bottom|center"
                                            android:marqueeRepeatLimit="marquee_forever"
                                            android:scrollHorizontally="true"
                                            android:singleLine="true"
                                            android:text="Eectricity"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="12sp" />

                                    </FrameLayout>
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginBottom="15dp"
                                    android:elevation="5dp"
                                    app:cardCornerRadius="10dp"
                                    app:cardElevation="5dp">

                                    <FrameLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="45dp"
                                            android:layout_height="45dp"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="-5dp"
                                            android:padding="3dp"
                                            android:src="@drawable/ic_home_landline" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginTop="3dp"
                                            android:layout_marginBottom="3dp"
                                            android:ellipsize="marquee"
                                            android:fontFamily="@font/roboto"
                                            android:gravity="bottom|center"
                                            android:marqueeRepeatLimit="marquee_forever"
                                            android:scrollHorizontally="true"
                                            android:singleLine="true"
                                            android:text="Landline"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="12sp" />

                                    </FrameLayout>

                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                        </HorizontalScrollView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/img_1"
                            android:elevation="5dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="5dp">

                            <ImageView
                                android:id="@+id/iv_banner_first"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@mipmap/ic_launcher"
                                android:scaleType="fitXY" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Booking"
                            android:textColor="@color/black" />

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_marginRight="15dp"
                            android:scrollbars="none">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="-5dp"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginBottom="15dp"
                                    android:elevation="5dp"
                                    app:cardCornerRadius="10dp"
                                    app:cardElevation="5dp">

                                    <FrameLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="45dp"
                                            android:layout_height="45dp"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="-5dp"
                                            android:padding="3dp"
                                            android:src="@drawable/ic_home_bus" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginTop="3dp"
                                            android:layout_marginBottom="3dp"
                                            android:ellipsize="marquee"
                                            android:fontFamily="@font/roboto"
                                            android:gravity="bottom|center"
                                            android:marqueeRepeatLimit="marquee_forever"
                                            android:scrollHorizontally="true"
                                            android:singleLine="true"
                                            android:text="Bus"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="12sp" />

                                    </FrameLayout>
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginBottom="15dp"
                                    android:elevation="5dp"
                                    app:cardCornerRadius="10dp"
                                    app:cardElevation="5dp">

                                    <FrameLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="45dp"
                                            android:layout_height="45dp"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="-5dp"
                                            android:padding="3dp"
                                            android:src="@drawable/ic_home_flight" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginTop="3dp"
                                            android:layout_marginBottom="3dp"
                                            android:ellipsize="marquee"
                                            android:fontFamily="@font/roboto"
                                            android:gravity="bottom|center"
                                            android:marqueeRepeatLimit="marquee_forever"
                                            android:scrollHorizontally="true"
                                            android:singleLine="true"
                                            android:text="Flight"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="12sp" />

                                    </FrameLayout>

                                </androidx.cardview.widget.CardView>


                                <androidx.cardview.widget.CardView
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginBottom="15dp"
                                    android:elevation="5dp"
                                    app:cardCornerRadius="10dp"
                                    app:cardElevation="5dp">

                                    <FrameLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="45dp"
                                            android:layout_height="45dp"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="-5dp"
                                            android:padding="3dp"
                                            android:src="@drawable/ic_home_hotel" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginTop="3dp"
                                            android:layout_marginBottom="3dp"
                                            android:ellipsize="marquee"
                                            android:fontFamily="@font/roboto"
                                            android:gravity="bottom|center"
                                            android:marqueeRepeatLimit="marquee_forever"
                                            android:scrollHorizontally="true"
                                            android:singleLine="true"
                                            android:text="Hotel"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="12sp" />

                                    </FrameLayout>
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_marginBottom="15dp"
                                    android:elevation="5dp"
                                    app:cardCornerRadius="10dp"
                                    app:cardElevation="5dp">

                                    <FrameLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="45dp"
                                            android:layout_height="45dp"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="-5dp"
                                            android:padding="3dp"
                                            android:src="@drawable/ic_home_theatre" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginTop="3dp"
                                            android:layout_marginBottom="3dp"
                                            android:ellipsize="marquee"
                                            android:fontFamily="@font/roboto"
                                            android:gravity="bottom|center"
                                            android:marqueeRepeatLimit="marquee_forever"
                                            android:scrollHorizontally="true"
                                            android:singleLine="true"
                                            android:text="Theatre"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="12sp" />

                                    </FrameLayout>

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>
                        </HorizontalScrollView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/img_2"
                            android:elevation="5dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="5dp">

                            <ImageView
                                android:id="@+id/iv_banner_second"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@mipmap/ic_launcher"
                                android:scaleType="fitXY" />

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:fontFamily="@font/poppins_bold"
                                android:text="Mobiles"
                                android:textColor="@color/black" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-5dp">

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rec_Mobiles"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:scrollbars="none" />

                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/poppins_bold"
                                android:text="Fashion"
                                android:textColor="@color/black" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-5dp">

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rec_Fashion"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:scrollbars="none" />

                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/poppins_bold"
                                android:text="Home Appliances"
                                android:textColor="@color/black" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-5dp">

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rec_Home_Appliances"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:scrollbars="none" />

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>
                </FrameLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#eee"
            android:gravity="bottom"
            android:id="@+id/rl_bottom"
            android:layout_alignParentBottom="true"
            tools:ignore="MissingConstraints">

            <com.iammert.library.readablebottombar.ReadableBottomBar
                android:id="@+id/bottomBar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="1dp"
                app:rbb_activeItemType="text"
                app:rbb_backgroundColor="@color/app_color_white"
                app:rbb_indicatorColor="@color/colorPrimary"
                app:rbb_indicatorHeight="2dp"
                app:rbb_initialIndex="0"
                app:rbb_tabs="@xml/tabs"
                app:rbb_textColor="@color/black"
                app:rbb_textSize="8dp" />
            <!--app:rbb_activeItemType="text or icon"-->
        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>